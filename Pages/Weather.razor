@page "/weather"
@inject AppSyncService AppSync

<h3>Services</h3>

@if (services == null)
{
    <p>Loading...</p>
}
else
{
    <button class="btn btn-primary" @onclick="CreateService">Click me</button>

    <ul>
        @foreach (var svc in services)
        {
            <li>@svc.Title - @svc.Description</li>
        }
    </ul>
}

@code {
    private List<Service> services;

    protected override async Task OnInitializedAsync()
    {
        services = await AppSync.ListServicesAsync();
    }


    private async Task CreateService()
    {
         await AppSync.CreateServiceAsync("Amplify","This is a great Service 123");
         services = await AppSync.ListServicesAsync();
    }
}
